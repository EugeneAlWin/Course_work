<Page
    x:Class="Tests_TR.VIEV.PAGES.Testing_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tests_TR.VIEV.PAGES"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Testing_Page"
    d:DataContext="{d:DesignInstance Type=local:Text}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="WhiteSmoke">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TabControl SelectedIndex="0" TabStripPlacement="Left">
                <TabItem
                    Width="30"
                    Height="30"
                    Header="1">
                    <Grid
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="12"
                        Background="Red">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.45*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="0.3*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.08*" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="0.08*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Column="0"
                                Background="blue"
                                Content="&lt;" />
                            <Label Grid.Column="1" Background="Yellow" />
                            <Button
                                Grid.Column="2"
                                Background="blue"
                                Content="&gt;" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Textt}" />
                            <StackPanel Grid.Column="1" Background="Pink" />
                        </Grid>
                        <StackPanel
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Background="Aqua"
                            Visibility="Visible" />
                    </Grid>
                </TabItem>
                <TabItem
                    Width="30"
                    Height="30"
                    Header="2">
                    <Grid
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="12"
                        Background="Red">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.45*" />
                            <RowDefinition />
                            <RowDefinition Height="0.3*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.08*" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="0.08*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Column="0"
                                Background="blue"
                                Content="&lt;" />
                            <Label Grid.Column="1" Background="Yellow" />
                            <Button
                                Grid.Column="2"
                                Background="blue"
                                Content="&gt;" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding [0].Textt}" />
                            <TextBlock Grid.Column="1" Text="{Binding [1].Textt}" />
                        </Grid>
                        <StackPanel
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Background="Aqua"
                            Visibility="Visible" />
                    </Grid>
                </TabItem>
            </TabControl>

        </Grid>
    </Grid>
</Page>
